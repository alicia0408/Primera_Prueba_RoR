

<div class="well">
<h1>  Lista de tareas</h1>

<table class= "table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @todos.each do |todo| %>
      <tr class ="info">
        <td ><%= todo.description %></td>
        <td><%= todo.completed %></td>

        <td><%= link_to 'Mostrar', todos_path, class: 'btn btn-info'%></td>
        <td><%= link_to 'Editar', edit_todo_path(todo),  class:'btn btn-warning'%></td>
        <td><%= link_to 'Borrar', todo, method: :delete, class: 'btn btn-danger'%></td>
     <td> <%= link_to 'completar', complete_path(todo), class: 'btn btn-primary'%></td>
 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear ToDo', todos_new_path %>
</div>