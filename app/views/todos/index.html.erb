

<div class="well">
<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.description %></td>
        <td><%= todo.completed %></td>
        <td><%= link_to 'Mostrar', todo %></td>
        <td><%= link_to 'Editar', edit_todo_path(todo) %></td>
        <td><%= link_to 'Borrar', todo, method: :delete%></td>
                

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear ToDo', new_todo_path %>
</div>